<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="500.0" prefWidth="540.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SalesTableCController">
   <center>
      <VBox prefHeight="697.0" prefWidth="540.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="確定状況" />
            <ComboBox fx:id="fx_combo_settle" prefWidth="150.0">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </ComboBox>
            <Label text="売上ジャンル" />
            <ComboBox fx:id="fx_combo_genres_id" prefWidth="150.0">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </ComboBox>
            <Label text="顧客" />
            <ComboBox fx:id="fx_combo_customers_id" prefHeight="27.0" prefWidth="522.0">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </ComboBox>
            <Label text="請求状況" />
            <ComboBox fx:id="fx_invoice_statuses_id" prefWidth="150.0">
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </ComboBox>
            <Label text="請求日" />
            <DatePicker fx:id="fx_picker_billing_date">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </DatePicker>
            <Label text="売上金額" />
            <HBox prefHeight="31.0" prefWidth="540.0">
               <children>
                  <TextField fx:id="fx_text_total_sale" prefHeight="27.0" prefWidth="460.0">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#OnShowDetailButtonClick" text="追加" />
               </children>
            </HBox>
            <Label text="仕入れ金額" />
            <TextField fx:id="fx_text_total_expense">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></TextField>
            <Label text="利益" />
            <TextField fx:id="fx_text_profit" editable="false">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></TextField>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="新規売上登録" BorderPane.alignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <HBox prefHeight="93.0" prefWidth="540.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#OnAddButtonClick" text="登録" />
            <Button mnemonicParsing="false" text="中止" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
